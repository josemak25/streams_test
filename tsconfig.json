{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "target": "esnext",
    "skipLibCheck": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [ "dom", "esnext"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/*": ["src/*"],
      "@utils": ["src/utils"],
      "@hooks": ["src/hooks"],
      "@assets/*": ["assets/*"],
      "@config": [" src/config"],
      "@screens": ["src/screens"],
      "@typings/*": ["typings/*"],
      "@constants": ["src/constants"],
      "@components": ["src/components"],
      "@providers/*": ["src/providers/*"],
      "@navigation/*": ["src/navigation/*"],
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "margin-vertical",
            "margin-horizontal",
            "padding-vertical",
            "padding-horizontal"
          ]
        }
      }
    ]
  },
  "include": ["typings/**/*.d.ts", "src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "**/*.spec.ts"],
}